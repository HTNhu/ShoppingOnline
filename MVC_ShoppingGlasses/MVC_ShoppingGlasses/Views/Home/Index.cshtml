@model List<MVC_ShoppingGlasses.Models.Product>

@{
    ViewBag.Title = "Home Page";
}
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/js")
<style>
    .btn-muahang:hover {
        opacity: 1;
        color:white;
        font-size:medium;
    }

    .product:hover .btn-muahang {
        opacity: 1;
    }
</style>
<div class="jumbotron">
    <h1>       WEBSITE MẮT KÍNH THỜI TRANG</h1>
    <p class="lead">Website cung cấp các loại mắt kính thời trang đẹp hợp xu hướng phù hợp với mọi lứa tuổi .</p>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <a href="#">
                    <img src="../Images/Clubmaster.jpg" width="1200px" height="300px" />
                </a>
            </div>

            <div class="item">
                <a href="#">
                    <img src="../Images/HaneS.jpg" width="1200px" height="300px" />
                </a>
            </div>

            <div class="item">
                <a href="#">
                    <img src="../Images/matkinhrapdoi.jpg" width="1200px" height="300px" />
                </a>
            </div>

            <div class="item">
                <a href="#">
                    <img src="../Images/roundmetal.jpg" width="1200px" height="300px" />
                </a>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<h1>Sản phẩm bán chạy</h1>
<hr />
<div>
    @foreach (var pro in Model)
    {
        var i = pro.ProductID;
        <div class="col-sm-4">
            <div class="product" onclick="location.href='@Url.Action("ProductDetail","Product",new {id = pro.ProductID})'">
                <img src=@pro.ImgURL.ToString().Trim() width="360px" height="320px" />
                <b>@pro.Name</b>
                <p>@pro.Price VND</p>

                <a href="#" class="btn btn-muahang btn-secondary " style="width:100%; height:30px;background-color:black" >

                    <span class="text"> Xem chi tiết </span>
                </a>
            </div>
        </div>
    }

</div>
